<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    tools:context = ".SplashActivity" >


    <androidx.viewpager.widget.ViewPager
        android:id = "@+id/splash_view_pager"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_above = "@id/splash_tab"
        android:layout_marginBottom = "8dp" />


    <TextView
        android:id = "@+id/splash_swipe"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentEnd = "true"
        android:layout_alignParentBottom = "true"
        android:text = "@string/Swipe"
        android:textColor = "@color/colorForestGreen"
        android:contentDescription = "@string/app_name"
        android:layout_marginEnd = "30dp"
        android:layout_marginBottom = "30dp"
        android:layout_toEndOf = "@id/splash_tab"
        android:textAlignment = "textEnd" />


    <com.google.android.material.tabs.TabLayout
        android:id = "@+id/splash_tab"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentStart = "true"
        android:layout_alignParentBottom = "true"
        android:layout_marginStart = "20dp"
        android:layout_marginEnd = "8dp"
        android:layout_marginBottom = "15dp"
        app:tabBackground = "@drawable/circle_holder"
        app:tabIndicatorColor = "@color/colorDark" >

    </com.google.android.material.tabs.TabLayout >


    <RelativeLayout
        android:id = "@+id/splash_btn_container"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginBottom = "54dp" >

        <Button
            android:id = "@+id/splash_get_started_btn"
            android:layout_width = "172dp"
            android:layout_height = "50dp"
            android:layout_alignParentBottom = "true"
            android:layout_centerHorizontal = "true"
            android:elevation="12dp"
            android:background = "@drawable/custom_splash_button"
            android:text = "@string/Get"
            android:textColor = "@color/colorWhite"
            android:visibility = "invisible" />


    </RelativeLayout >


</RelativeLayout >